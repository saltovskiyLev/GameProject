<Window x:Class="МЕГО_ТАНКОВЫЙ_ПРОЕКТ.MainWindow"
        KeyDown="desktop_KeyDown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:МЕГО_ТАНКОВЫЙ_ПРОЕКТ"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Background="Wheat" Name="desktop" MouseDown="desktop_MouseDown" MouseLeftButtonDown="desktop_MouseLeftButtonDown">
            <Line X1 = "0" Y1 = "120" X2 = "1920" Y2 = "120" Stroke="Red">
            </Line>
            <Rectangle Width="1920" Height="120" Fill="Red"></Rectangle>
        </Canvas>
    </Grid>
</Window>
