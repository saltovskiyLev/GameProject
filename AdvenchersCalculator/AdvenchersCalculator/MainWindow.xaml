<Window x:Class="AdvenchersCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvenchersCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <ListBox x:Name="FightR1"> </ListBox>
            <ListBox x:Name="FightR2"></ListBox>
            <StackPanel Orientation="Vertical" Name="SPComboPairs">
                <Button Content="Создать пару" Name="BFight" Click="BFight_Click"></Button>
                <Button Content="Расчитать" Name="BCalculate" Click="BCalculate_Click"> </Button>
                
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
