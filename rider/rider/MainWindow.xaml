<Window x:Class="rider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rider"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Name="SpMap"></StackPanel>
        <Button x:Name="BWindow" MouseLeftButtonDown="BWindow_MouseLeftButtonDown" Content="Посмотреть достижения" BorderBrush="Black" Width="180" Height="20"></Button>
        <TextBlock Text="Вы проиграли" Width="100" Margin="50" FontSize="1" Name="TBGameOwer"></TextBlock>
    </Grid>
</Window>
