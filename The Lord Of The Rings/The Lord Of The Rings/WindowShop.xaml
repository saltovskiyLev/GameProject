<Window x:Class="The_Lord_Of_The_Rings.WindowShop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Lord_Of_The_Rings"
        mc:Ignorable="d"
        Title="WindowShop" Height="450" Width="800">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="200"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="1" Name="tbGrittings"></TextBlock>
            <Image x:Name="Avatar" Grid.Row="1" Grid.Column="1"> </Image>
            <WrapPanel Name="ProductList" Grid.Row="0" Grid.Column="0"></WrapPanel>
        </Grid>
    </StackPanel>
</Window>
