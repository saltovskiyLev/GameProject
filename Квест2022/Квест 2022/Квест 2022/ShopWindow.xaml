<Window x:Class="Квест_2022.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Квест_2022"
        mc:Ignorable="d"
        Title="ShopWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <WrapPanel Name="wpProducts"> </WrapPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"> </ColumnDefinition>
                <ColumnDefinition Width="100"> </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" x:Name="tbGritings">
            </TextBlock>
            <Image Grid.Column="1" Name="imgAvatar"> </Image>
        </Grid>
    </StackPanel>
</Window>
